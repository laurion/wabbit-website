html, body
  margin: 0
  padding: 0

body
  font: 14px "Source Sans Pro", "Helvetica Neue", Helvetica, sans-serif
  line-height: 1.4em
  background: #eeeeee
  color: #33333
  margin: 0 auto
  -webkit-font-smoothing: antialiased

.content
  color: white
.container
  padding-left: 1em
  padding-right: 1em
.mainstripe
  position: relative
  height: 100vh
  width: 100vw
  color: white
  overflow: hidden
  .imgBack
    position: absolute;
    top: 0;
    left: 0;
    height: 100%
    width: 100%
    background-size: cover
    background-position: center center
    img
      width: 100%
      height: 100%
  .overlay
    position: absolute
    top: 0
    background: rgba(0,0,0,0.4)
    height: 100%
    width: 100%
